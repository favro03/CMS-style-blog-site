<article class="card">
      <div class="card-header">
        <h4></h3><a href="/post/{{id}}">{{title}}</a></h4>
        <p>Created by {{user.username}} on {{format_date created_at}}</p>
      </div>
      <div>
        <p class="card-body"> {{post_content}}</p>
      </div>
      <div class="meta">
        
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
</article>