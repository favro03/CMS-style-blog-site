<article class="post">
      <div class="title">
        <a href=>{{title}}</a> Created by {{user.username}} on
        {{format_date created_at}}
        |
        <p> {{post_content}}</p>
      </div>
      <div class="meta">
        
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
</article>